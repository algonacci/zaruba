#!/bin/sh
set -e

PROJECT_DIR=$1
TEMPLATE_DIR=$(pwd)

if [ -e ${PROJECT_DIR}/redis ]
then
    read -p "${PROJECT_DIR}/redis is not empty, do you want to continue (Y/n)? " answer
    if [ $answer != "Y" ] && [ $answer != "y" ]
    then
        echo "Redis not created."
        exit 0
    fi
fi

# Copy project to PROJECT_DIR, add .gitignore and change to the project directory
cp -r ${TEMPLATE_DIR}/redis ${PROJECT_DIR}/redis
echo "Redis created"